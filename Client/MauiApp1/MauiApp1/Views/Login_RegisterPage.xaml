<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.Login_RegisterPage"
             Title="Login_RegisterPage">
    <VerticalStackLayout>
        <Label Text="로그인 및 가입" FontSize="32" HorizontalOptions="Center" />

        <Entry x:Name="usernameEntry" Placeholder="아이디 입력" />
        <Entry x:Name="passwordEntry" Placeholder="비밀번호 입력" IsPassword="True" />

        <Button Text="로그인" Clicked="OnLoginClicked" />
        <Entry x:Name="NameEntry" Placeholder="이름 입력"/>
        <Button Text="가입" Clicked="OnRegisterClicked" />
        <Label x:Name="messageLabel" TextColor="Red" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>